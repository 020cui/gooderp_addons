<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id='weixin_diff_contacts_form' model='ir.ui.view'>
            <field name='name'>weixin.diff.contacts.form</field>
            <field name='model'>weixin.diff.contacts</field>
            <field name='arch' type='xml'>
                <form>
                    <div>
                        <p><h3>同步数据</h3></p>
                        <p><strong>同步</strong>操作将会将本地的通讯录相关的增删改查操作同步到微信通讯录上</p>
                    </div>

                    <footer>
                        <button name="sync_content" string="开始同步" type="object" class="oe_highlight"/>
                        or
                        <button string="取消" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id='weixin_diff_contacts_action' model='ir.actions.act_window'>
            <field name='name'>通讯录同步</field>
            <field name='res_model'>weixin.diff.contacts</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>form</field>
            <field name='target'>new</field>
        </record>

        <menuitem id='weixin_diff_contacts_menu' parent='gooderp_second_weixin_setting' action='weixin_diff_contacts_action' sequence='120' />

    </data>
</openerp>
