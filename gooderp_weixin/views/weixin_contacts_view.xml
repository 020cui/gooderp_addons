<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id='weixin_contacts_tree' model='ir.ui.view'>
            <field name='name'>weixin.contacts.tree</field>
            <field name='model'>weixin.contacts</field>
            <field name='arch' type='xml'>
                <tree string='微信联系人' create="0" edit="0">
                    <field name='staff_id' />
                    <field name='name' />
                    <field name='weixinid' />
                    <field name='work_mobile' />
                    <field name='work_email' />
                    <field name='position' />
                    <field name='user_id' />
                    <field name='is_follow' />
                    <field name='update_list' />
                    <field name='sync_status' />
                </tree>
            </field>
        </record>

        <record id='weixin_contacts_form' model='ir.ui.view'>
            <field name='name'>weixin.contacts.form</field>
            <field name='model'>weixin.contacts</field>
            <field name='arch' type='xml'>
                <form string='微信联系人' create='0' edit='0'>
                    <sheet>
                        <group>
                            <group>
                                <field name='staff_id' />
                                <field name='name' />
                                <field name='weixinid' />
                                <field name='work_mobile' />
                                <field name='work_email' />
                            </group>
                            <group>
                                <field name='position' />
                                <field name='user_id' />
                                <field name='is_follow' readonly='1' />
                                <field name='sync_status' readonly='1' />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id='weixin_contacts_action' model='ir.actions.act_window'>
            <field name='name'>微信联系人</field>
            <field name='res_model'>weixin.contacts</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>tree,form</field>
        </record>

        <menuitem id='weixin_contacts_menuitem' action='weixin_contacts_action' parent='gooderp_second_weixin_setting' sequence='110' />
    </data>
</openerp>
