<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id='wechat_enterprise_form' model='ir.ui.view'>
            <field name='name'>wechat.enterprise.form</field>
            <field name='model'>wechat.enterprise</field>
            <field name='inherit_id' ref='gooderp_wechat.wechat_enterprise_form' />
            <field name='arch' type='xml'>

                <div name="buttons" position='inside'>
                    <button name='sync_department' string='同步组织架构' type='object' />
                </div>
                <xpath expr="//notebook/page[1]" position="after">
                    <page string='组织架构'>
                        <field name='department_ids'  >
                            <tree editable='top' >
                                <field name='name' />
                                <field name='order' />
                                <field name='department_id' />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>



    </data>
</openerp>
