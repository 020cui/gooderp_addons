<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id='wechat_application_tree' model='ir.ui.view'>
            <field name='name'>wechat.application.tree</field>
            <field name='model'>wechat.application</field>
            <field name='arch' type='xml'>
                <tree>
                    <field name='name' />
                    <field name='description' />
                    <field name='application_id' />
<!--                     <field name='callback_url' />
                    <field name='callback_token' />
                    <field name='callback_aeskey' /> -->
                    <field name='redirect_domain' />
                    <field name='report_location_flag' />
                    <field name='callback_mode' />
                    <field name='is_report_user' />
                    <field name='is_report_enter' />
                </tree>
            </field>
        </record>

        <record id='wechat_application_form' model='ir.ui.view'>
            <field name='name'>wechat.application.form</field>
            <field name='model'>wechat.application</field>
            <field name='arch' type='xml'>
                <form>
                    <sheet>
                        <div class="oe_left" style="width: 500px;">
                            <field name="logo" widget="image" class="oe_avatar oe_left"/>
                            <div class="oe_title" style="width: 390px;">
                                <label class="oe_edit_only" for="name" string="应用名称"/>
                                <h1><field name="name" class="oe_inline" required='1' /></h1>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name='application_id' required='1' />
                                <field name='report_location_flag' />
                                <field name='callback_mode' />
                                <field name='is_report_enter' />
                                <field name='is_report_user' />
                            </group>
                            <group>
                                <field name='callback_url' required='1' />
                                <field name='callback_token' required='1' />
                                <field name='callback_aeskey' required='1' />
                                <field name='redirect_domain' />
                            </group>
                        </group>

                        <notebook>
                            <page string='菜单'>
                                <field name='menu_ids' readonly='1' />
                            </page>
                            <page string='权限组'>
                                <field name='permission_group_ids' readonly='1' />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>
