<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id='wechat_permission_group_tree' model='ir.ui.view'>
            <field name='name'>wechat.permission.group.tree</field>
            <field name='model'>wechat.permission.group</field>
            <field name='arch' type='xml'>
                <tree >
                    <field name='name' required='1' />
                    <field name='secret' required='1' />
                    <field name='code' />
                    <!-- <field name='access_token' /> -->
                    <!-- <field name='access_token_timestamp' /> -->
                    <!-- <field name='jsapi_ticket' /> -->
                    <!-- <field name='jsapi_ticket_timestamp' /> -->
                    <field name='is_authenticate' />
                    <field name='application_ids' widget='many2many_tags' />
                </tree>
            </field>
        </record>

        <record id='wechat_permission_group_form' model='ir.ui.view'>
            <field name='name'>wechat.permission.group.form</field>
            <field name='model'>wechat.permission.group</field>
            <field name='arch' type='xml'>
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name='name' />
                                <field name='is_authenticate' />
                                <field name='access_token' readonly='1' />
                                <field name='jsapi_ticket' readonly='1' />
                            </group>
                            <group>
                                <field name='code' />
                                <field name='secret' />
                                <field name='access_token_timestamp' readonly='1' />
                                <field name='jsapi_ticket_timestamp' readonly='1' />
                            </group>
                        </group>

                        <notebook>
                            <page string='应用权限'>
                                <field name='application_ids' />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>
