<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id='sync_menu_wizard_form' model='ir.ui.view'>
            <field name='name'>sync.menu.wizard.form</field>
            <field name='model'>sync.menu.wizard</field>
            <field name='arch' type='xml'>
                <form>
                    <div>
                        <p><h3>同步菜单</h3></p>
                        <p><strong>同步</strong>操作将会将本地选择的菜单数据同步覆盖到微信企业号上的应用菜单</p>
                    </div>

                    <footer>
                        <button name="sync_menu" string="同步菜单" type="object" class="oe_highlight"/>
                        or
                        <button string="取消" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id='sync_menu_wizard_action' model='ir.actions.act_window'>
            <field name='name'>微信菜单同步</field>
            <field name='res_model'>sync.menu.wizard</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>form</field>
            <field name='target'>new</field>
        </record>

    </data>
</openerp>
