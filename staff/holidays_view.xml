<?xml version="1.0"?>
<openerp>
    <data>
    	<!--假期管理-->
        <menuitem id="menu_holiday_main" name="假期管理" parent="staff.menu_staff_root"/>
        <!--请假界面-->
        <record id="view_staff_leave_form" model="ir.ui.view">
            <field name="name">staff.holidays.form</field>
            <field name="model">staff.holidays</field>
            <field name="arch" type="xml">
                <form string="请假">
                	<header>
                		<field name="state" widget="statusbar"/>
                	</header>
                	<sheet>
                	<group>
                		<group>
		                    <field name="name"/>
		                    <field name="type"/>
			                	<laber for="days" string="起止期间"/>
		                	<div>
		                        <group col="3">
		                            <field name="date_start" nolabel="1" class="oe_inline"/><label string="-" class="oe_inline"/>
		                            <field name="date_end" nolabel="1" class="oe_inline"/>
		                        </group>
		                        <div>
		                        	<field name="days" class="oe_inline"/> days
		                        </div>
		                	</div>
                		</group>
                		<group>
		                    <field name="staff_id"/>
		                    <field name="department_id"/>
                		</group>
                	</group>
                	</sheet>
                </form>
            </field>
        </record>
        <record id="view_staff_leave_tree" model="ir.ui.view">
            <field name="name">staff.holidays.tree</field>
            <field name="model">staff.holidays</field>
            <field name="arch" type="xml">
                <tree string="请假">
                	<field name='name'/>
                	<field name='type'/>
                	<field name='staff_id'/>
                	<field name='department_id'/>
                	<field name='days'/>
                </tree>
            </field>
        </record>
        <record id="leave_action" model="ir.actions.act_window">
            <field name="name">请假</field>
            <field name="res_model">staff.holidays</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_leave" name='请假' parent="menu_holiday_main" action="leave_action" groups='base.group_erp_manager'/>
    </data>
</openerp>